<%= form_for @course, :url =>  url_for(:action => @action),method: :post do |f| %>
   <p id="notice"><b><%= notice %></b></p>
   <p id="alert"><b><%= alert %></b></p>

    <% if @course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@course.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :number %><br>
      <%= f.text_field :number ,class: 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title ,class: 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :desc %><br>
      <%= f.text_field :desc ,class: 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :startDate %><br>
      <%= f.text_field :startDate ,class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :endDate %><br>
      <%= f.text_field :endDate ,class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :status %><br>
      <%= f.select :status,options_for_select(['active','inactive']),class:'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit :submit ,class:"btn btn-primary" %>
    </div>
<% end %>

<%= link_to 'Back', :back %>
