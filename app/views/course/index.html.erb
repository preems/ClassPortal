<head>
  <title>Simple Search Form</title>
</head>
<body>
  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag(course_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Courses" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>


<table>
<% @course.each do |course| %>
  <div class="course">
    <tr>
      <td><%= course.number %></td>
      <td><%= course.desc %></td>
      <td><%= course.status %></td>
      <td><%= course.title %></td>
      <td><%= link_to 'Enrol', "#" %></td>
    </tr>
  </div>
<% end %>
</table>
</body>
